{
    "rules": {
        "bowls": {
            ".read": "auth != null",
            ".write": "auth != null"
        },
        "picks": {
            "$userId": {
                ".read": "$userId == auth.uid",
                ".write": "$userId == auth.uid"
            }
        },
        "users": {
            "$user": {
                ".read": "auth != null",
                ".write": "$user == auth.uid"
            }
        },
        "pools": {
            ".read": "auth != null",
            "$pool": {
                ".write": "!data.exists() || data.child('managers').hasChild(auth.uid) == true"
            }
        },
        "seasons": {
            ".read": "auth != null",
            ".write": "false"
        }
    }
}