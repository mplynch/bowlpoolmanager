{
   "rules": {
      ".read": false,
      ".write": false,
      "secured": {
         ".read": "root.child('secured_read_allowed').val() === true",
         ".write": "root.child('secured_write_allowed').val() === true"
      },
      "$other": {
         ".read": true,
         ".write": true
      }
   }
}